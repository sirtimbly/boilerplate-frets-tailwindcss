{
  "name": "tailwind-frets",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "unite \"parcel serve src/index.html\" \"frets-styles-generator -w src/styles/\"",
    "build": "frets-styles-generator src/styles/app.css src/styles/app-styles.ts -p && parcel build src/index.html",
    "css": "postcss src/styles/app.css -c postcss.config.js -o dist/app.css",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "xo && jest"
  },
  "author": "",
  "license": "ISC",
  "xo": {
    "globals": [
      "$",
      "window",
      "document"
    ],
    "rules": {
      "import/no-unresolved": false
    },
    "settings": {
      "import/resolver": {
        "parcel": {
          "rootDir": "src",
          "extensions": [
            ".ts"
          ]
        }
      }
    },
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "ignore": [
      "src/patterns/templates",
      "fractal.js",
      "postcss.config.js"
    ]
  },
  "dependencies": {
    "frets": "^1.0.0-beta.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@gunar/unite": "1.2.3",
    "@types/eslint": "^4.16.6",
    "@types/sass": "^1.16.0",
    "@types/stylelint": "^9.10.0",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "eslint": "5.16.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-typescript": "^0.12.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-parcel": "^1.9.0",
    "eslint-plugin-import": "^2.17.2",
    "frets-styles-generator": "^1.2.0",
    "parcel": "^1.12.3",
    "purgecss-from-frets": "^1.0.3",
    "sass": "^1.20.1",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "tailwindcss": "^1.0.1",
    "typescript": "^3.4.5",
    "xo": "^0.24.0"
  }
}
